<h3 class="text-center">All Categories</h3>
<h5 class="text-center"><%= link_to "Add A Category", new_category_path(@category) %></h5>


<ul>
  <% @categories.each do |category|%>
  <li class=category_<%= category.id %>>
    <strong><%= link_to category.title, category_path(category) %>: </strong>
    <small><%= link_to "Edit", edit_category_path(category) %></small>
    <small><%= link_to "Delete", category_path(category), method: "delete" %></small>
  </li>
<% end %>
</ul>
