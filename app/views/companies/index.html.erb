<h3 class="text-center">All Companies</h3>

<ul>
  <% @companies.each do |company| %>
  <li class=company_<%= company.id %>>
    <strong><%= link_to company.name, company_path(company) %>: </strong>
    <small><%= link_to "Edit", edit_company_path(company) %></small>
    <small><%= link_to "Delete", company_path(company), method: "delete" %></small>
  </li>
  <% end %>
</ul>
