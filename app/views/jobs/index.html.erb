<h3 class="text-center">All Jobs for <strong><%= @company.name %></strong></h3>
<h5 class="text-center"><%= link_to "Add A Job", new_company_job_path(@company, @jobs) %></h5>

<% @company.jobs.each do |job| %>
<ul class="job_<%= job.id %>"><strong>  <%= link_to job.title, company_job_path(@company, job) %> </strong><br>
  <small> <%= link_to "Edit Job", edit_company_job_path(@company, job) %> </small>
  <small> <%= link_to "Delete Job", company_job_path(@company, job), method: :delete %> </small>
</ul>
<% end %><br>

<h4>Contacts at <%= @company.name %></h4>
<% @contacts.each.with_index do |contact, i| %>
<ul class="contact_<%= contact.id %>">
  <small>Contact <%= i + 1 %></small><br>
  <strong> Name: <%= contact.name %> </strong><br>
  <small> <%= contact.title %> </small><br>
  Email: <%= contact.email %>
</ul>
<% end %>

<h4>Add New Company Contact</h4>
<%= render partial: 'contacts/form' %>
